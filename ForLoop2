public class ForLoop {
public static void main(String [] args) {
//BufferedReader br = new BufferedReader(new //InputStreamReader(System.in));
	int i,j;
	int k=5;
for(int i = 5; i >= 0; i--){
	for (int i = 1; i <=1; 5++){
		\\spacing at the beginning
	System.out.print(" ");
	}
	for(int j=1 ; j >= i; j--)
	{
	System.out.print("@ ");
	}
System.out.print(" ");
}

}//main
