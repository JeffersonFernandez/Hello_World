//import java.io.*;
public class ForLoopOne {
public static void main(String [] args) {
//BufferedReader br = new BufferedReader(new //InputStreamReader(System.in));
for(int x = 5; x >= 0; x--){
System.out.print("\n");
for(int y = 0; y <= 5; y++){
	if (x<y){
	System.out.print("@");
	}
	else{
	System.out.print(" ");
	}

}//for
}
}//main
}//class
