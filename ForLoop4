//import java.io.*;
public class ForLoopEight {
public static void main(String [] args) {
//BufferedReader br = new BufferedReader(new InputStreamReader(System.in));

for (int i=0; i<=6; i++){
		for (int j=0; j<5;j ++){
			if (j==0) {
				System.out.print("*");
			}if(j-i>0){
				System.out.print(" ");
			}
			if(i-j>3){
				System.out.print(" ");
			}if(j==3&&i>=3) {
				System.out.print("*");
		}
	}
	if(i<3){
		System.out.print("*");
	}
		System.out.println(" ");
	}
}//main
}//class
